// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model drinks {
  id         Int             @id @default(autoincrement())
  name       String
  category_id      Int 
  description       String
  is_new     Boolean
  created_at DateTime?       @default(now())
  categories      categories           @relation(fields: [category_id], references: [id])
  images images[]
  drinks_allergies drinks_allergies[]
  nutritions nutritions[]
  @@index([category_id], name: "category_id")

}

model categories {
  id         Int             @id @default(autoincrement())
  name       String
  description       String
  created_at DateTime?       @default(now())
  drinks drinks[]
}

model images {
  id         Int             @id @default(autoincrement())
  image_url       String
  image_id       Int
  drinks     drinks           @relation(fields: [image_id], references: [id])
  created_at DateTime?       @default(now())
}

model allergies {
  id         Int             @id @default(autoincrement())
  allergy       String
  created_at DateTime?       @default(now())
  drinks_allergies drinks_allergies[]
}

model drinks_allergies {
  id         Int             @id @default(autoincrement())
  drink_id       Int
  allergy_id       Int
  drinks     drinks           @relation(fields: [drink_id], references: [id])
  allergies     allergies           @relation(fields: [allergy_id], references: [id])
  created_at DateTime?       @default(now())
}

model nutritions {
  id         Int             @id @default(autoincrement())
  calories       String
  sodium       String
  fat       String
  sugar       String
  protein       String
  caffein       String
  nutrition_id       Int
  drinks     drinks           @relation(fields: [nutrition_id], references: [id])
  created_at DateTime?       @default(now())
}