// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model drinks {
  id            Int   @id   @default(autoincrement())
  categories_id Int
  korean_name   String      @db.VarChar(3000)
  english_name  String      @db.VarChar(3000)
  is_new        Boolean 
  description   String      @db.VarChar(3000)
  created_at    DateTime    @default(now())
  categories  categories  @relation(fields: [categories_id], references: [id])
  drink_images     drink_images []
  drink_allergies  drink_allergies []
  nutrition  nutrition?
}

model categories {
  id                   Int   @id   @default(autoincrement())
  category_name        String      @db.VarChar(3000)
  category_description String      @db.VarChar(3000)
  created_at           DateTime    @default(now())
  drinks  drinks []
}

model drink_images {
  id           Int   @id   @default(autoincrement())
  image_url    String      @db.VarChar(3000)
  drinks_id    Int
  drinks  drinks  @relation(fields: [drinks_id], references: [id])
}

model drink_allergies {
  id           Int   @id   @default(autoincrement())
  drink_id     Int
  allergies_id Int
  created_at   DateTime    @default(now())
  drinks  drinks  @relation(fields: [drink_id], references: [id]) 
  allergies  allergies  @relation(fields: [allergies_id], references: [id])
}

model allergies {
  id           Int   @id   @default(autoincrement())
  allergy      Int
  created_at   DateTime    @default(now())
  drink_allergies  drink_allergies []
}

model nutrition {
  id            Int  @id   @default(autoincrement())
  drink_id      Int        
  calories      String     @db.VarChar(3000)
  sodium        String     @db.VarChar(3000)
  fat           String     @db.VarChar(3000)
  sugar         String     @db.VarChar(3000)
  protein       String     @db.VarChar(3000)
  caffeine      String     @db.VarChar(3000)
  created_at    DateTime   @default(now())
  drinks  drinks  @relation(fields: [drink_id], references: [id])
}

model users {
  id        Int   @id   @default(autoincrement())
  name      String?
  email     String  @unique
  password  String
  created_at  DateTime  @default(now())
}